<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical">

    <include layout="@layout/toolbar_portfolio" />

    <include layout="@layout/layout_loading_white" />

    <include layout="@layout/layout_no_internet_white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ic_user_gray" />

                    <cheetah.alphacapital.textutils.CustomTextInputLayout
                        android:id="@+id/inputFirstName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="8dp"
                        android:theme="@style/MyEditTextThemeGray">

                        <cheetah.alphacapital.textutils.CustomAppEditText
                            android:id="@+id/edtFirstName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:hint="FirstName*"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:minLines="1"
                            android:paddingTop="5dp"
                            android:textColor="@color/text_dark_gray"
                            android:textSize="16sp" />

                    </cheetah.alphacapital.textutils.CustomTextInputLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/bg_main_dark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ic_user_gray" />

                    <cheetah.alphacapital.textutils.CustomTextInputLayout
                        android:id="@+id/inputLastName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="8dp"
                        android:theme="@style/MyEditTextThemeGray">

                        <cheetah.alphacapital.textutils.CustomAppEditText
                            android:id="@+id/edtLastName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:hint="LastName*"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:minLines="1"
                            android:paddingTop="5dp"
                            android:textColor="@color/text_dark_gray"
                            android:textSize="16sp" />

                    </cheetah.alphacapital.textutils.CustomTextInputLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/bg_main_dark" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ic_organizatio" />

                    <cheetah.alphacapital.textutils.CustomTextInputLayout
                        android:id="@+id/inputOrganization"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="8dp"
                        android:theme="@style/MyEditTextThemeGray">

                        <cheetah.alphacapital.textutils.CustomAppEditText
                            android:id="@+id/edtOrganization"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:hint="Organization*"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:minLines="1"
                            android:paddingTop="5dp"
                            android:textColor="@color/text_dark_gray"
                            android:textSize="16sp" />

                    </cheetah.alphacapital.textutils.CustomTextInputLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/bg_main_dark" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ic_mobile" />

                    <cheetah.alphacapital.textutils.CustomTextInputLayout
                        android:id="@+id/inputContactNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="8dp"
                        android:theme="@style/MyEditTextThemeGray">

                        <cheetah.alphacapital.textutils.CustomAppEditText
                            android:id="@+id/edtContactNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:hint="Phone*"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:minLines="1"
                            android:paddingTop="5dp"
                            android:textColor="@color/text_dark_gray"
                            android:textSize="16sp" />

                    </cheetah.alphacapital.textutils.CustomTextInputLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/bg_main_dark" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ic_email" />

                    <cheetah.alphacapital.textutils.CustomTextInputLayout
                        android:id="@+id/inputSignUpEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="8dp"
                        android:theme="@style/MyEditTextThemeGray">

                        <cheetah.alphacapital.textutils.CustomAppEditText
                            android:id="@+id/edtSignUpEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:hint="Email*"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:minLines="1"
                            android:paddingTop="5dp"
                            android:textColor="@color/text_dark_gray"
                            android:textSize="16sp" />

                    </cheetah.alphacapital.textutils.CustomTextInputLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/bg_main_dark" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ic_address" />

                    <cheetah.alphacapital.textutils.CustomTextInputLayout
                        android:id="@+id/inputAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="8dp"
                        android:theme="@style/MyEditTextThemeGray">

                        <cheetah.alphacapital.textutils.CustomAppEditText
                            android:id="@+id/edtAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:hint="Address*"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="textMultiLine"
                            android:maxLines="3"
                            android:minLines="1"
                            android:paddingTop="5dp"
                            android:textColor="@color/text_dark_gray"
                            android:textSize="16sp" />

                    </cheetah.alphacapital.textutils.CustomTextInputLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/bg_main_dark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ic_country" />

                    <cheetah.alphacapital.textutils.CustomTextInputLayout
                        android:id="@+id/inputCountry"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="8dp"
                        android:theme="@style/MyEditTextThemeGray">

                        <cheetah.alphacapital.textutils.CustomAppEditText
                            android:id="@+id/edtCountry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:focusable="false"
                            android:hint="Select Country*"
                            android:inputType="textMultiLine"
                            android:maxLines="1"
                            android:minLines="1"
                            android:paddingTop="5dp"
                            android:textColor="@color/text_dark_gray"
                            android:textSize="16sp" />

                    </cheetah.alphacapital.textutils.CustomTextInputLayout>

                    <ProgressBar
                        android:id="@+id/pbCountry"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="8dp"
                        android:theme="@style/ProgressBarReverse"
                        android:visibility="gone" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/bg_main_dark" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ic_state" />

                    <cheetah.alphacapital.textutils.CustomTextInputLayout
                        android:id="@+id/inputState"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="8dp"
                        android:theme="@style/MyEditTextThemeGray">

                        <cheetah.alphacapital.textutils.CustomAppEditText
                            android:id="@+id/edtState"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:focusable="false"
                            android:hint="Select State*"
                            android:inputType="textMultiLine"
                            android:maxLines="1"
                            android:minLines="1"
                            android:paddingTop="5dp"
                            android:textColor="@color/text_dark_gray"
                            android:textSize="16sp" />

                    </cheetah.alphacapital.textutils.CustomTextInputLayout>

                    <ProgressBar
                        android:id="@+id/pbState"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="8dp"
                        android:theme="@style/ProgressBarReverse"
                        android:visibility="gone" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/bg_main_dark" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ic_city" />

                    <cheetah.alphacapital.textutils.CustomTextInputLayout
                        android:id="@+id/inputCity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="8dp"
                        android:theme="@style/MyEditTextThemeGray">

                        <cheetah.alphacapital.textutils.CustomAppEditText
                            android:id="@+id/edtCity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:focusable="false"
                            android:hint="Select City*"
                            android:inputType="textMultiLine"
                            android:maxLines="1"
                            android:minLines="1"
                            android:paddingTop="5dp"
                            android:textColor="@color/text_dark_gray"
                            android:textSize="16sp" />

                    </cheetah.alphacapital.textutils.CustomTextInputLayout>

                    <ProgressBar
                        android:id="@+id/pbCity"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="8dp"
                        android:theme="@style/ProgressBarReverse"
                        android:visibility="gone" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/bg_main_dark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ic_status" />

                    <cheetah.alphacapital.textutils.CustomTextInputLayout
                        android:id="@+id/inputStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="8dp"
                        android:theme="@style/MyEditTextThemeGray">

                        <cheetah.alphacapital.textutils.CustomAppEditText
                            android:id="@+id/edtStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:focusable="false"
                            android:hint="Select Status*"
                            android:inputType="textMultiLine"
                            android:maxLines="1"
                            android:minLines="1"
                            android:paddingTop="5dp"
                            android:textColor="@color/text_dark_gray"
                            android:textSize="16sp" />

                    </cheetah.alphacapital.textutils.CustomTextInputLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/bg_main_dark" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_button_border"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="24dp"
                android:paddingTop="12dp"
                android:paddingRight="24dp"
                android:paddingBottom="12dp">

                <cheetah.alphacapital.textutils.CustomTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
