<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <cheetah.alphacapital.textutils.CustomTextViewBold
                android:id="@+id/txtUserSortName"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_round_dark_gray"
                android:gravity="center"
                android:text="RP"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center|left"
            android:orientation="vertical">

            <cheetah.alphacapital.textutils.CustomTextViewRegular
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:minLines="1"
                android:text="Ravi"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />

            <cheetah.alphacapital.textutils.CustomTextViewRegular
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:minLines="1"
                android:text="ravi@coronation.in"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/viewline"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/text_light_gray"
        android:visibility="gone" />

</LinearLayout>
